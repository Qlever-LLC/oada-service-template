{
  "extends": "@tsconfig/node14",
  "compilerOptions": {
    "removeComments": true,
    "importHelpers": true,
    "composite": true,
    "strict": true,
    "importsNotUsedAsValues": "error",
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist"
  }
}
